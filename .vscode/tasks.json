{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Server",
            "type": "npm",
            "script": "dev",
            "path": "server/",
            "problemMatcher": []
        },
        {
            "label": "Build Server",
            "type": "npm",
            "script": "build",
            "path": "server/",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Server w/ Client Bundled",
            "type": "npm",
            "script": "buildForDistribution",
            "path": "server/",
            "problemMatcher": []
        },
        {
            "label": "Run Server w/ Client Bundled",
            "type": "npm",
            "script": "dev:distro",
            "path": "server/",
            "problemMatcher": []
        },
        {
            "label": "Run Client & Proxied Server",
            "type": "npm",
            "script": "serve",
            "path": "client/",
            "problemMatcher": []
        },
        {
            "label": "Open localhost:8080",
            "type": "shell",
            "command": "open http://localhost:8080",
            "problemMatcher": []
        },
        {
            "label": "Open localhost:4200",
            "type": "shell",
            "command": "open http://localhost:4200",
            "problemMatcher": []
        },
        {
            "label": "Publish to Heroku",
            "type": "shell",
            "command": "git push heroku master && heroku open",
            "problemMatcher": []
        },
        {
            "label": "New Server Typeorm Migration",
            "type": "shell",
            "command": "typeorm migration:generate -n ${input:MigrationName}",
            "options": {
                "cwd": "${workspaceRoot}/server"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Server Typeorm Migrations",
            "type": "shell",
            "command": "typeorm migration:run",
            "options": {
                "cwd": "${workspaceRoot}/server"
            },
            "problemMatcher": []
        },
        {
            "label": "Drop DB & Run Migrations",
            "type": "shell",
            "command": "typeorm schema:drop && typeorm migration:run",
            "options": {
                "cwd": "${workspaceRoot}/server"
            },
            "problemMatcher": []
        },
        {
            "label": "Npm Install All Projects",
            "type": "shell",
            "command": "cd googleAssistant/functions && npm install && cd .. && cd client && npm install && cd .. && cd server && npm install",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "MigrationName",
            "description": "Enter Typeorm Migration Name",
            "default": "",
            "type": "promptString"
        }
    ]
}