{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Server Dev",
            "type": "npm",
            "script": "dev",
            "path": "server/",
            "problemMatcher": []
        },
        {
            "label": "Build Server",
            "type": "npm",
            "script": "build",
            "path": "server/",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "New Server Typeorm Migration",
            "type": "shell",
            "command": "typeorm migration:generate -n ${input:MigrationName}",
            "options": {
                "cwd": "${workspaceRoot}/server"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Server Typeorm Migrations",
            "type": "shell",
            "command": "typeorm migration:run",
            "options": {
                "cwd": "${workspaceRoot}/server"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "MigrationName",
            "description": "Enter Typeorm Migration Name",
            "default": "",
            "type": "promptString"
        }
    ]
}