{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/server/dist/web/index.js",
            "preLaunchTask": "dev",
            "smartStep": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/client",
            "smartStep": true,
            "skipFiles": [
                "${workspaceFolder}/client/node_modules/**/*.js",
                "${workspaceFolder}/dist/**/*.js",
                "<node_internals>/**/*.js"
            ],
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}/client",
            "smartStep": true,
            "skipFiles": [
                "${workspaceFolder}/client/node_modules/**/*.js",
                "${workspaceFolder}/dist/**/*.js",
                "<node_internals>/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
          "name": "Full-stack",
          "configurations": ["Launch Program", "Launch Chrome", "Attach to Chrome"]
        },
        {
            "name": "Angular",
            "configurations": ["Launch Chrome", "Attach to Chrome"]
        }
    ]
}